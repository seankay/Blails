#flash
  - if flash.present?
    -if flash[:notice]
      .alert.alert-success
        %button{type:"button", class: "close", "data-dismiss"=>"alert"}
          &times;
        %h4=flash[:notice]
    -if flash[:error]
      .alert.alert-error
        %button{type:"button", class: "close", "data-dismiss"=>"alert"}
          &times;
        %h4=flash[:error]
    -if flash[:alert]
      .alert.alert-warning
        %button{type:"button", class: "close", "data-dismiss"=>"alert"}
          &times;
        %h4=flash[:alert]
