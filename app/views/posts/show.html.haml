%h1= @post.title
%p= @post.body
%hr
%p= "Private: #{@post.private}"
=link_to "Back to Posts", posts_path, class: "btn btn-small btn-primary"
=link_to "Edit", edit_post_path(@post), class: "btn btn-small btn-info"
=link_to "Delete", post_path(@post), class: "btn btn-small btn-danger", method: :delete, confirm: "Are you sure you want to delete #{@post.title}?"
